{
    "include": [
        "static/**/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "vendor",
        "public",
        "public_dev",
        "resource",
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@static/*": [
                "./static/*",
                "../static/*"
            ]
        },
        "typeRoots": [
            "./static/vue/types",
            "./node_modules/iview/types",
            "./node_modules/vue/types",
            "./node_modules/@types"
        ],
        "strictFunctionTypes": false,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}
